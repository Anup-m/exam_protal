<div class="container">
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="home">
            <div class="row">
                <div class="col-md-4 col-md-offset-4" <h3>Add Subject</h3>
                    <form action="./addQuestion" method="post">
                        <div class="form-group">
                            <input type="text" name="question" id="question" placeholder="Question" class="form-control"
                                required>
                        </div>
                   
                        <select class="form-control" name='subject_code'>
                            {{#each subjects }}
                            <option value="{{ this.code }}">{{ this.name }}</option>
                            {{/each}}
                        </select>
                        <br>
                        <button type="submit" class="btn btn-primary btn-block" id="addSubject">Add Question</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


