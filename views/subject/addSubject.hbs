<div class="container">
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="home">
            <div class="row">
                <div class="col-md-4 col-md-offset-4"
                    <h3>Add Subject</h3>
                    <form action="./addSubject" method="post">
                        <div class="form-group">
                            <input type="text" name="name" id="name" placeholder="Subject Name" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="code" id="code" placeholder="Subject Code" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="department" id="department" placeholder="Department" class="form-control"
                                required>
                        </div>
                        <select class="form-control">
                            {{#each departments }}
                            <option value="{{ this.dept_name }}">{{ this.dept_name }}</option>
                            {{/each}}
                        </select>
                        <br />
                        <button type="submit" class="btn btn-primary btn-block" id="addSubject">Add Subject</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>